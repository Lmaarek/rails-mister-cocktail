<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <h1><%= @cocktail.name %></h1>
        <% @cocktail.doses.each do |dose| %>
          <p><%= dose.ingredient.name %></p>
          <p><%= dose.description %></p>
          <p><%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete %></p>
        <% end %>
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <p class="padded"><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class:"link" %></p>
        <p class="padded"><%= link_to "Back", cocktails_path, class:"link" %></p>
      </div>
    </div>
  </div>
</div>
