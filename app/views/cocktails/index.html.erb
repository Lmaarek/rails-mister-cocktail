<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
    <h1>Cocktail list</h1>
    <% @cocktails.each do |cocktail| %>
      <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
    <% end %>
    <p><%= link_to "Add a cocktail", new_cocktail_path %></p>
    </div>
  </div>
</div>
